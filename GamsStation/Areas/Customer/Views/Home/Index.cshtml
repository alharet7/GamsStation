@model IEnumerable<Game>

<div class="row pb-3">
    @foreach (var game in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2 h-100">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded h-100">
                        <img src="@game.ImageURL" class="card-img-top rounded" />
                        <div class="card-body pb-2">
                            <div class="pl-1">
                                <p class="card-title h6 text-light  text-uppercase text-center">@game.Title</p>
                                <p class="card-title text-secondary opacity-50  text-center"><b>@game.Category.Name</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-warning text-opacity-75 text-center mb-0">
                                    Price: @game.Price JD
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-gameId="@game.Id"
                               class="btn btn-warning bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>