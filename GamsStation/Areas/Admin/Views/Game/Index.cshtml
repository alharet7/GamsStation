@model List<Game>

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Game List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Game" asp-action="Upsert" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>  Create New Game
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Title</th>
                    <th> Price</th>
                    <th> Description</th>
                    <th> Platform</th>
                    <th> Category</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/game.js"></script>
}
